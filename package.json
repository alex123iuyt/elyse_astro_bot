{
  "name": "elyse-cms",
  "version": "1.0.0",
  "private": true,

  "scripts": {
    "dev": "cd webapp && npm run dev",
    "build": "cd webapp && npm run build",
    "db:push": "pnpm --filter db db:push",
    "db:migrate": "pnpm --filter db db:migrate",
    "db:seed": "pnpm --filter db db:seed",
    "db:studio": "pnpm --filter db db:studio",
    "lint": "cd webapp && npm run lint",
    "type-check": "cd webapp && npm run type-check",
    "inventory": "cd scripts && pnpm run inventory",
    "migrate-content": "cd scripts && pnpm run migrate-content",
    "setup:cms": "pnpm run inventory && pnpm run migrate-content"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}

